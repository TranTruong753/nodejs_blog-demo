    <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2 gy-3">

       

        {{#each courses}}
         <div class="col">  
            <div class="card">
                <img src="{{this._img}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this._name}}</h5>
                    <p class="card-text">{{this._description}}</p>
                    <a href="#" class="btn btn-primary">Mua Ngay</a>
                </div>
            </div>
        </div>
        {{/each}}

        

   
        
    </div>
</div>

